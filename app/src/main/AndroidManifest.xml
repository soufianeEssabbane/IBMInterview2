<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soufiane.ibminterview2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activities.ProductsListActivity"
            android:label="@string/title_activity_produt_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.DetailProductActivity"
            android:label="@string/title_activity_detail_product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.BaseActivity" />
    </application>

</manifest>